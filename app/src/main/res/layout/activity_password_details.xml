<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="com.liguo.password.PasswordBean" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.linxiao.framework.widget.SimpleTitleView
            android:id="@+id/apd_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:isCilpStatusBar="true"
            app:title="详细信息"
            app:titleSize="16dp"
            app:titleColor="@color/white"
            app:leftImageRes="@drawable/ic_arrow_back_black_24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="30dp">
            <LinearLayout
                style="@style/apd_text_layout">
                <TextView
                    style="@style/apd_text_key"
                    android:text="备注："/>
                <TextView
                    style="@style/apd_text_value"
                    android:text="@{data.name}"/>
            </LinearLayout>
            <LinearLayout
                style="@style/apd_text_layout">
                <TextView
                    style="@style/apd_text_key"
                    android:text="账户："/>
                <TextView
                    style="@style/apd_text_value"
                    android:text="@{data.account}"/>
            </LinearLayout>
            <LinearLayout
                style="@style/apd_text_layout">
            <TextView
                style="@style/apd_text_key"
                android:text="密码："/>
            <TextView
                style="@style/apd_text_value"
                android:text="@{data.password}"/>
        </LinearLayout>
            <LinearLayout
                style="@style/apd_text_layout">
            <TextView
                style="@style/apd_text_key"
                android:text="历史密码："/>
            <TextView
                style="@style/apd_text_value"
                android:text="@{data.getHistoryPassword()}"/>
        </LinearLayout>
            <LinearLayout
                style="@style/apd_text_layout">
            <TextView
                style="@style/apd_text_key"
                android:text="最后一次修改时间："/>
            <TextView
                style="@style/apd_text_value"
                app:formatTime="@{data.time}"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>